@page "/users/add"
@using UserManagement.Shared.DTOs
@inject Services.IUsersClient UsersClient
@inject NavigationManager Nav

<PageTitle>Add User</PageTitle>

<h3>Add User</h3>

<EditForm Model="model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="forename" class="form-label">Forename</label>
        <InputText id="forename" class="form-control" @bind-Value="model.Forename" />
        <ValidationMessage For="() => model.Forename" />
    </div>

    <div class="mb-3">
        <label for="surname" class="form-label">Surname</label>
        <InputText id="surname" class="form-control" @bind-Value="model.Surname" />
        <ValidationMessage For="() => model.Surname" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" class="form-control" @bind-Value="model.Email" />
        <ValidationMessage For="() => model.Email" />
    </div>

    <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth</label>
        <InputDate id="dob" class="form-control" @bind-Value="model.DateOfBirth" />
        <ValidationMessage For="() => model.DateOfBirth" />
    </div>

    <div class="form-check mb-3">
        <InputCheckbox id="isActive" class="form-check-input" @bind-Value="model.IsActive" />
        <label class="form-check-label" for="isActive">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/users" class="btn btn-secondary ms-2">Cancel</a>
</EditForm>

@code {
    private CreateUserRequestDto model = new()
    {
        IsActive = true,
        DateOfBirth = DateTime.Today
    };

    private async Task HandleValidSubmit()
    {
        await UsersClient.CreateUserAsync(model);
        Nav.NavigateTo("/users");
    }
}
